# =============================================================================
# DATABASE (Neon.tech PostgreSQL)
# =============================================================================

# Pooled connection (for queries - used by Prisma Client)
DATABASE_URL="postgresql://user:password@ep-project-name.us-east-2.aws.neon.tech/neondb?sslmode=require"

# Direct connection (for migrations - bypasses connection pooler)
DIRECT_URL="postgresql://user:password@ep-project-name.us-east-2.aws.neon.tech/neondb?sslmode=require"


# =============================================================================
# AWS COGNITO (Authentication)
# =============================================================================
# Get these from AWS Cognito Console: https://console.aws.amazon.com/cognito
# See Documentation/AWS_Cognito_Setup_Guide.MD for setup instructions
# =============================================================================

# AWS Region where your Cognito User Pool is located
AWS_REGION="us-east-1"

# Cognito User Pool ID (format: us-east-1_XXXXXXXXX)
COGNITO_USER_POOL_ID="us-east-1_XXXXXXXXX"

# Cognito App Client ID (long alphanumeric string)
COGNITO_CLIENT_ID="xxxxxxxxxxxxxxxxxxxxxxxxxx"

# Optional: Cognito Hosted UI Domain (if using)
# COGNITO_DOMAIN="https://your-domain.auth.us-east-1.amazoncognito.com"

# NOTE: We use Public client (no client secret) for web applications


# =============================================================================
# NEXTAUTH.JS (Session Management)
# =============================================================================
# Generate NEXTAUTH_SECRET with: openssl rand -base64 32
# =============================================================================

# Full URL of your application
NEXTAUTH_URL="http://localhost:3000"

# Secret key for encrypting session tokens (REQUIRED)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="replace-with-random-secret-from-openssl-command"


# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================

# Public app URL (used for OAuth redirects, emails, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# App name (used in UI, emails, etc.)
NEXT_PUBLIC_APP_NAME="CertistryLMS"


# =============================================================================
# AWS S3 (File Storage)
# =============================================================================
# Get these from AWS IAM Console after creating IAM user
# See Documentation/AWS_S3_Setup_Guide.MD for setup instructions
# =============================================================================

# AWS Region for S3 bucket
AWS_S3_REGION="us-east-1"

# S3 Bucket name
AWS_S3_BUCKET_NAME="certistrylms"

# IAM User Access Keys (from certistry-lms-app user)
AWS_S3_ACCESS_KEY_ID="AKIA..."
AWS_S3_SECRET_ACCESS_KEY="wJalr..."

# Environment folder (dev, staging, or prod)
AWS_S3_FOLDER="dev"

# File upload limits (in bytes)
AWS_S3_MAX_FILE_SIZE_VIDEO="1073741824"  # 1 GB (1024 MB)
AWS_S3_MAX_FILE_SIZE_PDF="52428800"       # 50 MB
AWS_S3_MAX_FILE_SIZE_IMAGE="10485760"     # 10 MB


# =============================================================================
# ANTHROPIC AI (Blueprint Extraction)
# =============================================================================
# Get your API key from: https://console.anthropic.com/settings/keys
# =============================================================================

# Anthropic API key for Claude AI models
ANTHROPIC_API_KEY="sample_key_replace_with_real_key"


# =============================================================================
# VERCEL (Production Deployment)
# =============================================================================
# These are automatically set by Vercel, no need to configure manually
# VERCEL="1"
# VERCEL_ENV="production"
# VERCEL_URL="your-app.vercel.app"
